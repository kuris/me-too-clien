<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="#eeeeee">	
	<ScrollView android:layout_height="wrap_content" android:layout_width="fill_parent">
	<LinearLayout android:orientation="vertical" android:gravity="center_horizontal"
		android:layout_height="wrap_content" android:layout_weight="1" android:layout_width="fill_parent">
		
		<LinearLayout android:layout_height="wrap_content" android:layout_width="fill_parent" 
			android:layout_marginTop="15dp" android:orientation="vertical" 
			android:layout_marginLeft="5dp" android:layout_marginRight="5dp">
			<TextView android:layout_width="wrap_content" android:textColor="#000000" android:textSize="14sp" android:layout_marginLeft="13dp" 
            	android:layout_height="wrap_content" android:layout_marginTop="20dp" android:text="타이틀바"></TextView>
            <LinearLayout android:layout_width="fill_parent" android:orientation="vertical" android:layout_height="wrap_content" 
            		android:layout_marginBottom="10dp" android:layout_marginTop="10dp" android:layout_marginLeft="13.3dp" android:layout_marginRight="13.3dp">
				<RelativeLayout android:layout_gravity="center_vertical|center_horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
                    <ImageView android:layout_height="wrap_content" android:background="@drawable/box_05" android:layout_width="fill_parent"></ImageView>
                    <TextView android:layout_height="wrap_content" android:textColor="#191919" android:layout_width="wrap_content" android:layout_marginLeft="13.3dp" 
                    	android:textSize="15dp" android:layout_centerVertical="true" android:text="폰트크기 : 15sp " android:id="@+id/setting_font_title_textView"></TextView>
                    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" 
                    	android:layout_marginTop="2dp" android:layout_alignParentRight="true">
                    	<Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="작게" 
                    		android:id="@+id/setting_font_title_small_button" android:onClick="onClickTitleFontSmall"/>
                    	<Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="크게"
                    		android:id="@+id/setting_font_title_big_button" android:onClick="onClickTitleFontBig"/>
                    </LinearLayout>
                </RelativeLayout>
                <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" 
                	android:id="@+id/setting_font_title_preview_layout" android:layout_marginTop="5dp">
                </LinearLayout>
			</LinearLayout>
		</LinearLayout>
		
		<LinearLayout android:layout_height="wrap_content" android:layout_width="fill_parent" 
			android:layout_marginTop="15dp" android:orientation="vertical" 
			android:layout_marginLeft="5dp" android:layout_marginRight="5dp">
			<TextView android:layout_width="wrap_content" android:textColor="#000000" android:textSize="14sp" android:layout_marginLeft="13dp" 
            	android:layout_height="wrap_content" android:layout_marginTop="20dp" android:text="리스트 폰트 크기"></TextView>
            <LinearLayout android:layout_width="fill_parent" android:orientation="vertical" android:layout_height="wrap_content" 
            		android:layout_marginBottom="10dp" android:layout_marginTop="10dp" android:layout_marginLeft="13.3dp" android:layout_marginRight="13.3dp">
				<RelativeLayout android:layout_gravity="center_vertical|center_horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
                    <ImageView android:layout_height="wrap_content" android:background="@drawable/box_05" android:layout_width="fill_parent"></ImageView>
                    <TextView android:layout_height="wrap_content" android:textColor="#191919" android:layout_width="wrap_content" android:layout_marginLeft="13.3dp" 
                    	android:textSize="15dp" android:layout_centerVertical="true" android:text="폰트크기 : 15sp " android:id="@+id/setting_font_list_textView"></TextView>
                    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" 
                    	android:layout_marginTop="2dp" android:layout_alignParentRight="true">
                    	<Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="작게" 
                    		android:id="@+id/setting_font_list_small_button" android:onClick="onClickListFontSmall"/>
                    	<Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="크게" 
                    		android:id="@+id/setting_font_list_big_button" android:onClick="onClickListFontBig"/>
                    </LinearLayout>
                </RelativeLayout>
                <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
                	android:id="@+id/setting_font_list_preview_layout" android:layout_marginTop="5dp">
                </LinearLayout>
			</LinearLayout>
		</LinearLayout>
		
		
		<LinearLayout android:layout_height="wrap_content" android:layout_width="fill_parent" 
			android:layout_marginTop="15dp" android:orientation="vertical" 
			android:layout_marginLeft="5dp" android:layout_marginRight="5dp">
			<TextView android:layout_width="wrap_content" android:textColor="#000000" android:textSize="14sp" android:layout_marginLeft="13dp" 
            	android:layout_height="wrap_content" android:layout_marginTop="20dp" android:text="본문화면"></TextView>
            <LinearLayout android:layout_width="fill_parent" android:orientation="vertical" android:layout_height="wrap_content" 
            		android:layout_marginBottom="10dp" android:layout_marginTop="10dp" android:layout_marginLeft="13.3dp" android:layout_marginRight="13.3dp">
				<RelativeLayout android:layout_gravity="center_vertical|center_horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
                    <ImageView android:layout_height="wrap_content" android:background="@drawable/box_05" android:layout_width="fill_parent"></ImageView>
                    <TextView android:layout_height="wrap_content" android:textColor="#191919" android:layout_width="wrap_content" android:layout_marginLeft="13.3dp" 
                    	android:textSize="15dp" android:layout_centerVertical="true" android:text="폰트크기 : 15sp " android:id="@+id/setting_font_body_textView"></TextView>
                    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" 
                    	android:layout_marginTop="2dp" android:layout_alignParentRight="true">
                    	<Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="작게" 
                    		android:id="@+id/setting_font_body_small_button" android:onClick="onClickBodyFontSmall"/>
                    	<Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="크게"
                    		android:id="@+id/setting_font_body_big_button" android:onClick="onClickBodyFontBig"/>
                    </LinearLayout>
                </RelativeLayout>
                <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/setting_font_body_preview_layout">
                </LinearLayout>
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
	</ScrollView>
</LinearLayout>
