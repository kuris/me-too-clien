<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android" 
		android:layout_width="fill_parent" android:layout_height="wrap_content">
	<RelativeLayout android:id="@+id/board_detail_simpleReply_layout"
			android:padding="5dp" android:layout_width="fill_parent" android:layout_height="wrap_content" android:gravity="center_vertical">
	    <EditText android:layout_height="wrap_content" android:id="@+id/board_detail_simpleReply_txt" 
	    	android:hint="@string/board_detail_simpleReply_txt" android:textSize="13.3sp"
	    	android:layout_width="fill_parent" android:layout_marginRight="50dp" android:minHeight="50dp"/>
	    <Button android:onClick="onClickButton_simpleReply" android:layout_width="wrap_content" android:id="@+id/board_detail_simpleReply_sendbutton" 
	    	android:layout_alignParentRight="true" android:text="@string/board_detail_simpleReply_sendbutton" 
	    	android:textColor="#000000" android:layout_centerInParent="true" android:layout_height="wrap_content"/>
	</RelativeLayout>
</LinearLayout>