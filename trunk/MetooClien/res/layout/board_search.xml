<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="300dp" android:layout_height="fill_parent" android:orientation="vertical" >
	<LinearLayout android:layout_width="300dp" android:layout_height="wrap_content" >
		<Button android:id="@+id/board_search_type_button" android:text="제목"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:onClick="onClickSearchTypeButton"/>
		<EditText android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_weight="1"
			android:id="@+id/board_search_editText" android:singleLine="true" android:minWidth="100dp"></EditText>
		<Button android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:id="@+id/board_search_button" android:text="검색"
			android:onClick="onClickSearchButton"/>
	</LinearLayout>
	<LinearLayout android:background="#BB000000" android:layout_height="fill_parent" android:layout_width="fill_parent">
	</LinearLayout>
</LinearLayout>